// -*- mode: jsonc -*-
{
    "layer": "top", // Waybar at top layer
    "position": "top", // Waybar position (top|bottom|left|right)
    // "height": 1, // Waybar height (to be removed for auto height)
    "width": 1366,
    "spacing": "0px",
    "modules-left": [
        "hyprland/workspaces",
        "pulseaudio",
        "mpd"
    ],
    "modules-right": [
        "hyprland/language",
        "custom/media",
        "cpu",
        "backlight",
        "battery",
        "tray",
        "clock",
        "custom/power"
    ],
    "hyprland/workspaces": {
